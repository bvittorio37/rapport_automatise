{% extends 'base.html.twig' %}

{% block title %}Paf index{% endblock %}

{% block body %}
    <h1>Paf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Paf</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paf in pafs %}
            <tr>
                <td>{{ paf.id }}</td>
                <td>{{ paf.paf }}</td>
                <td>
                    <a href="{{ path('app_paf_show', {'id': paf.id}) }}">show</a>
                    <a href="{{ path('app_paf_edit', {'id': paf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paf_new') }}">Create new</a>
{% endblock %}
