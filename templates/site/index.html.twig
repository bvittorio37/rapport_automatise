
{% extends 'template.html.twig' %}
{% block pageName %} 
    site
{% endblock %}


{% block body %}
<section class="content">
      <!-- Default box -->
      <div class="card card-solid card-primary card-outline">
        <div class="card-header">
                <h1 class="card-title">La liste des sites</h1>
        </div>
        <div class="card-body pb-0">
       {#  {% for categorie in categories %} #}
            
          <div class="row ">
            {% for site in sites %}
                <div class="col-12 col-sm-6 col-md-3 ">

                <div class="card bg-light">
                    <div class="card-header">
                            <h1 class="card-title">Site {{ site.lieu }}</h1>
                    </div>
                    <div class="card-body pt-0">
                            <p class="text-muted text-sm"><b>Remarques: </b>{{ site.remarque ? : '(Pas de remarques)' }}  </p>
                            
                    </div>
                    <div class="card-footer">
                        <div >
                            <a href="{{path('app_site_edit', {'id': site.id})}}" class="btn btn-sm btn-success">
                                <i class="fas fa-pencil-alt"></i> Modifier
                            </a>
                            <a href="{{path('app_site_show', {'id': site.id})}}" class="btn btn-info btn-sm  ">
                                <i class="fas fa-eye "></i> DÃ©tail</a>
                        </div>
                        
                    </div>
                </div>
                </div>
            {% else %}
              <p class="bg-secondary"> (Aucun site)</p>
            {% endfor %}
            
          </div>
           {# {% endfor %} #}
        </div>

        
        <!-- /.card-body -->
        <div class="card-footer">
          <a href="{{ path('app_site_new') }}" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Ajouter un site</a>
        </div>
        <!-- /.card-footer -->
      </div>
      <!-- /.card -->

</section>
{% endblock %}
