                </div>
              <!-- /.card-header -->

              <div class="card-body table-responsive p-0 " style="height: 350px;">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                        <th></th>
                        <th>Site</th>
                        <th>Type de vol</th>
                        <th>Date de Rapport</th>
                        <th>Technicien</th>
                        <th></th>
                    </tr>
                  </thead>
                  <tbody>
                {% for i,rapport in rapports %}

                    <tr>
                        <td>{{ i +1 }}</td>
                        <td>{{ rapport.site }} </td>
                        <td>{{ rapport.typeRapport }}</td>
                        <td>{{ rapport.getDateRapport() ? rapport.getDateRapport()|date('d/m/Y') : '-' }}</td>
                        <td>{{ rapport.utilisateur }}</td>
                        <td><a href="{{ path('app_rapport_show',{'id': rapport.id}) }}" class="btn btn-success"><i class="fas fa-eye"> Voir</i></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5"  class="text-center">(Aucun rapport trouvé)</td>
                    </tr>
                {% endfor %}
                  </tbody>
                </table>
