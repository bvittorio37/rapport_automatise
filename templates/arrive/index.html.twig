{% extends 'template.html.twig' %}
{% block pageName %} 
 Arrivé
{% endblock %}

{% block body %}
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                    <h3 class="card-title mr-5">Liste des rapports arrivé</h3>
                   
            
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                    
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Recherche">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    
                    </div>
                </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0 " style="height: 350px;">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                        <th></th>
                        <th>Numero de vol</th>
                        <th>Date de Vol</th>
                        <th>Date de Rapport</th>
                        <th></th>
                        <th></th>
                    </tr>
                  </thead>
                  <tbody>
                {% for i,rapport in rapports %}

                    <tr>
                        <td>{{ i +1 }}</td>
                        <td>{{ rapport.numeroVol ? : '-' }}</td>
                        <td>{{ rapport.dateVol ? rapport.dateVol|date('Y-m-d') : '-' }}</td>
                        <td>{{ rapport.getDateRapport() ? rapport.getDateRapport()|date('Y-m-d') : '-' }}</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" >(Aucun rapport effectué)</td>
                    </tr>
                {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
               <!-- /.card-footer -->
            
                <div class="card-footer clearfix">
                    <a class="ml-5 btn btn-sm btn-success text-light float-right"  href ="{{ path('app_arrive_nouveau') }}"><i class="fas fa-plus"> Nouveau rapport</i> </a>
                </div>
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
{% endblock %}
