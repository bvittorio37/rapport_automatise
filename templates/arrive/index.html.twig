{% block body %}
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-6">
              <!-- small box -->
              <div class="small-box bg-info">
                <a href="{{ path('app_arrive_nouveau') }}" class="small-box-footer"><i class="fas fa-plus"> </i>  Nouveau Rapport </a>
                              </div>
            </div>
            <!-- ./col -->
        </div>
        <div class="row">
          <div class="col-12">
            <div class="card card-primary card-outline">
              <div class="card-header">
                    <h3 class="card-title mr-5">Liste des rapports arrivé</h3>
                   
            
                    {# <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                    
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Recherche">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    
                    </div> #}
                </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0 " style="height: 350px;">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                        <th></th>
                        <th>Site</th>
                        <th>Type de vol</th>
                        <th>Date de Rapport</th>
                        <th>Technicien</th>
                        <th></th>
                    </tr>
                  </thead>
                  <tbody>
                {% for i,rapport in rapports %}

                    <tr>
                        <td>{{ i +1 }}</td>
                        <td>{{ rapport.site }} </td>
                        <td>{{ rapport.typeRapport }}</td>
                        <td>{{ rapport.getDateRapport() ? rapport.getDateRapport()|date('Y/m/d') : '-' }}</td>
                        <td>{{ rapport.utilisateur }}</td>
                        <td><a href="{{ path('app_rapport_show',{'id': rapport.id}) }}" class="btn btn-info"><i class="fas fa-eye"> Détail</i></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5"  class="text-center">(Aucun rapport trouvé)</td>
                    </tr>
                {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
               <!-- /.card-footer -->
            
                <div class="card-footer clearfix">
                   {#  <a class="ml-5 btn btn-sm btn-success text-light float-right"  href ="{{ path('app_arrive_nouveau') }}"><i class="fas fa-plus"> Nouveau rapport</i> </a> #}
                </div>
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
