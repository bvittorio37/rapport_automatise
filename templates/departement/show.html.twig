{% block body %}
<section class="content">
      <!-- Default box -->
      <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <h3 class="profile-username text-center">{{ departement}}</h3>

                <p class="text-muted text-center">{{ departement.remarque}}</p>
                <p > <b>Les membres:</b></p>
                <ul class="list-group list-group-unbordered mb-3"> 
                    {% for membre in departement.mailsDepartements %}
                         <li class="list-group-item">
                            <b>{{membre.nomEmp}}</b> <a class="ml-5 text-center"> <i class="fas fa-envelope"></i>  {{membre.email}}</a> 
                            <a class="float-right btn btn-sm btn-success text-light   "><i class="fas fa-pencil-alt"></i> Modifier</a>
                            <a class="float-right btn btn-sm btn-danger text-light mr-3 "><i class="fas fa-trash"></i> Suprimer</a>
                        </li>
                        
                    {% endfor %}
                 
                </ul>
              </div>
              <div class="card-footer">
                <div class="float-right">
                  <a href="{{path('app_membre_new', {'id': departement.id})}}" class="btn btn-primary text-light"><i class="fas fa-plus"></i> Ajouter Membre</a>
                </div>
                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Retour</button>
              </div>
              <!-- /.card-body -->
            </div>
      <!-- /.card -->

</section>
{% endblock %}
