
{% extends 'template.html.twig' %}
{% block pageName %} 
 Utilisateurs
{% endblock %}
  {% block javascript %}
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet"></link>
      <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js">
        $(document).ready(function() {
            $('.js-example-basic-multiple').select2();
        });
    </script>
 {% endblock %}

{% block body %}
<section class="content">
      <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="card card-primary card-outline ">
                <div class="card-header">
                    <h1 class="card-title">Modification utilisateur</h1>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                {{ form_start(form) }}
                    <div class="card-body">
                        <div class="form-group">
                            {{ form_row(form.no_mat, {label: 'N° Matricule'}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.noms, {label: 'Noms'}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.prenoms, {label: 'Prénoms'}) }}
                        </div>
                        <div class="row">
                                <div class=" col-6 form-group">
                                        {{ form_row(form.email, {label: 'Email'}) }}
                                </div>
                                <div class=" col-6 form-group">
                                    {{ form_row(form.telephones, {label: 'N° Téléphones'}) }}
                                </div>
                            </div>
                        <div class="form-group">
                            {{ form_row(form.roles, {label: 'Roles'}) }}
                        </div>
                    {# <div class="form-group">
                         {{ form_row(form.password, {label: 'Mot de Passe'}) }}
                    </div> #}

                    <!-- /.card-body -->
                    </div>
                    <div class="card-footer">
                    <a href=" {{path('app_utilisateur')}}" class="btn btn-default "><i class="right fas fa-angle-left"></i> Retour</a>
                    <button type="submit" class="btn btn-primary float-right">Modifier</button>
                    </div>
                {{ form_end(form) }}
                </div>
            </div>
            <!-- /.card -->
        </div>
</section>



{% endblock %}

